PERFORMANCE CHECK QUERIES

SELECT
    query,
    calls,
    total_exec_time,
    mean_exec_time,
    rows,
    shared_blks_hit,
    shared_blks_read,
    shared_blks_dirtied,
    shared_blks_written,
    local_blks_hit,
    local_blks_read,
    local_blks_dirtied,
    local_blks_written,
    temp_blks_read,
    temp_blks_written,
    blk_read_time,
    blk_write_time
FROM
    pg_stat_statements
order by mean_exec_time desc
limit 20;


SELECT ee.* 
FROM public.tourneys_event_final_results efr, tourneys_events ee, tourneys_tournaments tt
where efr.efr_event_id = ee.id
and ee.ev_tourney_id = tt.id

